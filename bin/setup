#! /usr/bin/env bash

# DOC: Set up a new environment. Usage: bin/setup --tag=<image tag>
# Optional params:
#   --config=<config_file> to override config file

source bin/lib.sh
source ${CONFIG_FILE}

if [[ ! -z "${USE_DOCKER}" ]]; then
    COMMAND="setup"
    exec "bin/lib/run-from-docker"
else 
    source ${CONFIG_FILE}
    CMD_NAME=setup checkout::exec_delegated_command "$@"
fi
