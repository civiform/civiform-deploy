#! /usr/bin/env bash

# DOC: Set up a new environment. Usage: bin/setup --tag=<image tag>
# Optional params:
#   --config=<config_file> to override config file
#   --infra_commit=<commit_sha> to override infrastructure version. 
#     Needs to be a valid commit from https://github.com/civiform/civiform.

source bin/lib.sh
source ${CONFIG_FILE}

CMD_NAME=setup checkout::exec_delegated_command "$@"
